<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuyufei.bmc_android.admin.AppointmentFragment">
    <LinearLayout
        android:layout_margin="3dp"
        android:background="@color/color50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Title Date MMM -->
            <TextView
                android:textColor="@color/color50"
                android:id="@+id/appointment_date"
                android:padding="10dp"
                android:background="@color/color600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:background="@color/colorA800"
                    android:layout_height="wrap_content">
                    <!-- appointment time -->
                    <TextView
                        android:id="@+id/appointment_time"
                        android:textSize="20dp"
                        android:padding="20dp"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content" />
                    <!-- remain time -->
                    <TextView
                        android:id="@+id/remain_time"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:background="@color/colorA800"
                    android:layout_height="wrap_content">
                    <!-- visitor name -->
                    <TextView
                        android:id="@+id/visitor_name"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/business_name"
                        android:layout_width="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>


</FrameLayout>
