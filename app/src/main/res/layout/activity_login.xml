<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bmc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/app_bg"
    android:padding="30dp"
    tools:context="com.liuyufei.bmc_android.login.LoginActivity">

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_bmc_icon"
        android:contentDescription="@string/logo" />

    <ImageView
        android:id="@+id/company_logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_bmc_text"
        android:contentDescription="@string/logo"
         />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_email"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/login_button"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_squre"
        android:layout_marginTop="20dp"
        android:text="@string/btn_string_login"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ring_button"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_squre"
        android:layout_marginTop="20dp"
        android:text="@string/btn_ring_reception"
        android:textSize="18sp" />
</LinearLayout>
